<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme chính của ứng dụng -->
    <style name="Theme.TLUContact" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Màu sắc chính -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Cấu hình ActionBar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Style cho ActionBar -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <!-- Style cho tiêu đề trên ActionBar -->
    <style name="MyActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>